bar {
    colors {
        background #333333
        statusline $BG
        separator  #44475A
        focused_workspace  $bg     $bg     $fg
        active_workspace   $fg     $fg     $bg
        inactive_workspace #000000 #000000 $fg
        urgent_workspace   $bg     #ff0000 $fg
        binding_mode       $fg     #00ff00 #000000
    }
    # status_command conky
    position top
    padding 0px 0px
    # font -xos4-terminus-medium-r-normal--12-120-72-72-C-60-iso8859-1
    # font -*-proggysquaresz-medium-r-normal-*-11-80-*-*-*-*-iso8859-1
    workspace_buttons yes
    # i3bar_cmd "date +'%D - %T'"
    status_command i3status -c ~/.config/i3/i3status.conf
}
